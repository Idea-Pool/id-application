{
  "name": "id-application",
  "version": "0.0.1",
  "description": "A service which serves serial numbers for factories.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "tsc:watch": "tsc -w",
    "build": "npm run clean && npm run compile && npm run copyToDist",
    "copyToDist": "copyfiles -f *.txt *.md *.json dist",
    "clean": "rimraf ./dist ./docs",
    "tslint": "tslint --fix -c tslint.json ./src/**/*.ts ./tests/**/*.ts",
    "compile": "tsc && npm run tslint",
    "start": "npm run build && node ./dist/index.js"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "*.js.map"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "copyfiles": "^2.3.0",
    "husky": "^4.2.5",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typedoc": "^0.18.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/express-winston": "^4.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/node-fetch": "^2.5.7",
    "@types/uuid": "^8.3.0",
    "@types/winston": "^2.4.4",
    "express": "^4.20.0",
    "express-winston": "^4.0.5",
    "fs-extra": "^9.0.1",
    "node-fetch": "^2.6.7",
    "uuid": "^8.3.0",
    "winston": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint"
    }
  }
}
